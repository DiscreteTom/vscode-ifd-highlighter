{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "interactive fiction data",
	"patterns": [
		{
			"include": "#ifd-root"
		},
		{
			"include": "source.yaml"
		}
	],
	"repository": {
		"ifd-root": {
			"begin": "^\\s*(code\\s*:\\s*\\|)\\s*$",
			"end": "^\\s*(\\^)\\s*$",
			"beginCaptures": {
				"1": {
					"name": "variable.parameter.ifd"
				}
			},
			"endCaptures": {
				"1": {
					"name": "variable.parameter.ifd"
				}
			},
			"patterns": [
				{
					"include": "source.python"
				}
			]
		}
	},
	"scopeName": "source.ifd"
}